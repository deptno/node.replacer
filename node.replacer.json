[
    {
        "name": "replace \"hx.log[add|remove]\" => \"//LOG DELETED\"",
        "excludeDir": [
            "images",
            "snippet",
            "test_ts",
            "design_result",
            "css"
        ],
        "includeExt": [
            ".ts"
        ],
        "keepOriginalString": true,
        "pattern": "/([\\s]*hx.log[add|remove]*\\(.*\\);)\\n/g",
        "replacePostfix": "",
        "replacePrefix": "//LOG DELETED ",
        "source": "~/tmp"
    },
    {
        "name": "replace \"CRLF\" => \"LF\"",
        "excludeDir": [
            "images",
            "snippet",
            "test_ts",
            "design_result",
        ],
        "includeExt": [
            ".js",
            ".css"
        ],
        "keepOriginalString": false,
        "pattern": "/(\\r\\n)/g",
        "replacePostfix": "",
        "replacePrefix": "\n",
        "source": "~/tmp"
    }
]
